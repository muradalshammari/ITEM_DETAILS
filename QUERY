--KINDLY USET HE SQL QUERY FOR ABOVE REQUIREMENT,

--SERIALNUMBERTABLE->INV_SERIAL_NUMBERS
--QUERY_FOR_FETCHING_ITEM_CATEGORY_ITEM_NUMBER_SERIAL_NUMBER_ORGANIZATION_SUBINVENTORY_LOCATION

--CONDITION TO CONNECT WITH INVENTORY TRANSACTION :
/*imt.organization_id = esi.organization_id
   AND imt.inventory_item_id = esi.inventory_item_id*/

SELECT 

ESIB.ITEM_NUMBER AS "ITEM_NUMBER",

IODV.ORGANIZATION_NAME AS "ORGANIZATION_NAME",

ECB.CATEGORY_CODE AS "CATEGORY_CODE",

ISN.SERIAL_NUMBER AS "SERIAL_NUMBER",

ISN.CURRENT_SUBINVENTORY_CODE AS "CURRENT_SUBINVENTORY_CODE",

IIL.DESCRIPTION AS "DESCRIPTION",

IIL.SEGMENT1 AS "SEGMENT1"

FROM

INV_ITEM_LOCATIONS IIL,

INV_SERIAL_NUMBERS ISN,

EGP_CATEGORIES_B ECB,

EGP_ITEM_CATEGORIES EIC,

INV_ORGANIZATION_DEFINITIONS_V IODV,

EGP_SYSTEM_ITEMS_B ESIB

WHERE

ESIB.ORGANIZATION_ID = IODV.ORGANIZATION_ID

AND
ESIB.INVENTORY_ITEM_ID= EIC.INVENTORY_ITEM_ID

AND
ESIB.ORGANIZATION_ID= EIC.ORGANIZATION_ID

AND
EIC.CATEGORY_ID= ECB.CATEGORY_ID

AND
ESIB.INVENTORY_ITEM_ID=ISN.INVENTORY_ITEM_ID

AND
ESIB.ORGANIZATION_ID=ISN.CURRENT_ORGANIZATION_ID

AND
ISN.CURRENT_LOCATOR_ID=IIL.INVENTORY_LOCATION_ID(+)

AND
ISN.CURRENT_ORGANIZATION_ID=IIL.ORGANIZATION_ID(+)

--AND
--IODV.ORGANIZATION_CODE!='000'
